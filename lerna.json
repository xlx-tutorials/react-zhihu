{
  "packages": ["packages/*"],
  "version": "0.2.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "message": "chore(release): publish %s"
    }
  },
  "changelogPreset": {
    "name": "conventionalcommits",
    "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}",
    "types": [
      { "type": "feat", "section": "✨ Features" },
      { "type": "fix", "section": "🐛 Bug Fixes" },
      { "type": "chore", "hidden": false, "section": "🚧 Chores" },
      { "type": "docs", "hidden": false, "section": "📝 Docs" },
      { "type": "style", "hidden": false, "section": "💄 Styles" },
      { "type": "refactor", "hidden": false, "section": "♻️ Refactor" },
      { "type": "perf", "hidden": false, "section": "⚡️ Performance" },
      { "type": "test", "hidden": false, "section": "🧪 Tests" }
    ]
  }
}
