      },
      {
        "type": "chore",
        "hidden": false,
        "section": "ğŸš§ Chores"
      },
      {
        "type": "docs",
        "hidden": false,
        "section": "ğŸ“ Docs"
      },
      {
        "type": "style",
        "hidden": false,
        "section": "ğŸ’„ Styles"
      },
      {
        "type": "refactor",
        "hidden": false,
        "section": "â™»ï¸ Refactor"
      },
      {
        "type": "perf",
        "hidden": false,
        "section": "âš¡ï¸ Performance"
      },
      {
        "type": "test",
        "hidden": false,
        "section": "ğŸ§ª Tests"
