{
  "packages": [
    "packages/*"
  ],
  "version": "0.2.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "message": "chore(release): publish %s"
    }
  },
  "changelogPreset": {
    "name": "conventionalcommits",
    "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}",
    "types": [
      {
        "type": "feat",
        "section": "âœ¨ Features"
      },
      {
        "type": "fix",
